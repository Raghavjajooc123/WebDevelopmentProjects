<%- include ("./partials/headingbar"); %>
<%- include ("./partials/navbar"); %>

<div class="container d-flex flex-column justify-content-center align-items-center">
    <div class="card" style="margin: 35px 0px; width: 50%;">
        <div class="card-header">
            Hey <%= user.name %>
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p>Binge watching everyday, Keeps all boredom away</p>
            <footer class="blockquote-footer">MovieCentral <i class="fa-solid fa-clapperboard"></i></footer>
          </blockquote>
        </div>
    </div>


    <div class="playlistcontainer" style="width: 70%;">
        <div class="list-group">
            <form action="/watchlists/viewplaylist" method="post">
                <% if(playlistarray.length){ %>
                <% playlistarray.forEach(function(playlist) { %>
                <button type="submit" name="playlistname" id="moviebtn" value="<%- playlist %>"
                    class="d-flex justify-content-between align-items-center list-group-item list-group-item-action btn btn-outline-warning"><%= playlist %>
                </button>
                <% }); %>
                <% } %>
            </form>
        </div>
    </div>
</div>

